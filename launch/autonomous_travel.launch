<launch>

    <!-- params required by navigation.py and auto.py-->
    <rosparam param="/core_rover/Mode">"Auto"</rosparam>
    <rosparam param="rpm_limit">1000</rosparam>
    <rosparam param="steer_limit">1000</rosparam>

    <node pkg="tf" type="static_transform_publisher" name="imu_base_link" args="0 0 0 0 0 0 imu base_link 1--">   

    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization_node">
        <!-- switch on debug -->
        <param name="debug" value="true"/>

        <!-- node configuration -->
        <param name="frequency" value="30"/>
        <param name="sensor_timeout" value="0.1"/>
        <param name="two_d_mode" value="false"/>
	<param name="acceleration_limits" value = "[1.3, 0.0, 0.0, 0.0, 0.0, 4.5]"/>

        <!-- may need to change these depending on the frame_ids used by the playback data -->
        <param name="map_frame" value="map"/>
        <param name="odom_frame" value="odom"/>
        <!--param name="base_link_frame" value="base_link"/-->
        <param name="base_link_frame" value="imu"/> <!-- to run with uav-bag -->
        <param name="world_frame" value="odom"/>

        <!-- SUBUSCRIBE to: IMU "/nova_common/IMU" -->
	
        <param name="imu0" value="/nova_common/IMU"/>
        <param name="imu0_remove_gravitational_acceleration" value = "true"/>
	<param name="imu0_differential" value="false"/> <!-- set false if with navsat transform -->
        <rosparam param="imu0_config">[false,false,false,
                                       true,true,true,
                                       false,false,false,
                                       true,true,true,
                                       true,true,false]</rosparam>

	<param name="odom0" value="/stereo_odometry"/>

	<rosparam param="odom0_config">[true,  true,  false,
                               false, false, true,
                               true,  false, false,
                               false, false, true,
                               false, false, false]</rosparam> 
-->

        <!-- PUBLISH to: "/ekf/Odometry" -->
        <remap from="/odometry/filtered" to="/ekf/Odometry"/>
    </node>

    <node pkg="robot_localization" type="navsat_transform_node" name="navsat_transform_node">
        <param name="frequency" value="30"/>

        <!-- SUBSCRIBE to: "/nova_common/IMU"; "/nova_common/gps_data"; "/ekf/Odometry" -->
        <remap from="imu/data" to="/nova_common/IMU"/>
        <remap from="gps/fix" to="/nova_common/gps_data"/>
        <remap from="/odometry/filtered" to="/ekf/Odometry"/>

        <!-- PUBLISH to: "/ekf/gps_data"-->
        <param name="publish_filtered_gps" value="true"/>
        <remap from="gps/filtered" to="/ekf/gps_data"/>
    </node>
</launch>
