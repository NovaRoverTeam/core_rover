<launch>
  <arg name="CAMERA_NAME" default="elp" />

  <!-- start camera -->
  <include file="$(find core_rover)/launch/elp_stereo_camera.launch">
    <arg name="CAMERA_NAME" value="$(arg CAMERA_NAME)" />
  </include>

  <!-- start calibration -->
  <node pkg="camera_calibration" type="cameracalibrator.py" name="cameracalibrator" args=" --size 8x6 --square 0.025 --approximate=0.3 left:=/$(arg CAMERA_NAME)/left/image_raw right:=/$(arg CAMERA_NAME)/right/image_raw left_camera:=/$(arg CAMERA_NAME)/left right_camera:=/$(arg CAMERA_NAME)/right" required="true">
  </node>
</launch>
